{
	"name": "vscode-dtdl",
	"displayName": "DTDL",
	"version": "0.0.1",
	"private": false,
	"description": "This extension provides syntax highlighting to read and edit JSON documents using the Digital Twins Definition Language",
	"homepage": "https://github.com/CodeEditorLand/Foundation#readme",
	"bugs": {
		"url": "https://github.com/CodeEditorLand/Foundation/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/CodeEditorLand/Foundation.git"
	},
	"license": "SEE LICENSE IN LICENSE",
	"author": {
		"name": "Playform",
		"email": "Hello@Playform.Cloud",
		"url": "https://playform.cloud"
	},
	"type": "module",
	"main": "./dist/extension",
	"scripts": {
		"compile": "tsc -p ./",
		"eslint": "eslint src/**/*.ts",
		"prepublishOnly": "TypeScriptESBuild 'Source/**/*.ts'",
		"test:coverage": "jest --coverage",
		"vscode:prepublish": "webpack --mode production",
		"webpack": "webpack --mode development"
	},
	"contributes": {
		"commands": [
			{
				"category": "DTDL",
				"command": "vscode-dtdl.createInterface",
				"title": "Create Interface"
			}
		],
		"grammars": [
			{
				"language": "colorized-channel",
				"path": "./syntaxes/colorized.channel.tmLanguage",
				"scopeName": "text.channel.colorized"
			}
		],
		"jsonValidation": [
			{
				"fileMatch": "*.json",
				"url": "./resources/jsonSchema.json"
			}
		],
		"languages": [
			{
				"id": "colorized-channel",
				"mimetypes": [
					"text/x-code-output"
				]
			}
		],
		"snippets": [
			{
				"language": "json",
				"path": "./snippets/snippets.json"
			}
		]
	},
	"activationEvents": [
		"onCommand:vscode-dtdl.createInterface",
		"onLanguage:json",
		"workspaceContains:**/*.json"
	],
	"dependencies": {
		"dtdl-language-server": "0.6.1",
		"fs-extra": "^7.0.1",
		"vscode-extension-telemetry": "^0.1.6",
		"vscode-languageclient": "^6.1.3"
	},
	"devDependencies": {
		"@types/fs-extra": "^7.0.0",
		"@types/glob": "^7.1.1",
		"@types/jest": "^26.0.24",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.36.0",
		"copy-webpack-plugin": "^6.0.1",
		"glob": "^7.1.4",
		"jest": "^27.0.6",
		"ts-jest": "^27.0.4",
		"ts-loader": "^6.2.1",
		"typescript": "^3.3.1",
		"typescript-esbuild": "latest",
		"webpack": "^5.81.0",
		"webpack-cli": "^4.7.2"
	},
	"publishConfig": {
		"access": "public"
	},
	"icon": "logo.png",
	"aiKey": "[AIKEY PLACEHOLDER]"
}
